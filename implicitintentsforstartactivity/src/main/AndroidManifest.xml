<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mds2019.implicitintentsforstartactivity">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:label="@string/second_activity_name"
            android:name=".SecondActivity">

            <!-- android:parentActivityName=".MainActivity" -->

            <intent-filter>
                <!--Если вы определяете собственные действия, обязательно используйте в качестве их префикса имя пакета вашего приложения-->
                <action android:name="com.mds2019.implicitintentsforstartactivity.action" />

                <!--Для получения неявных объектов Intent необходимо включить категорию CATEGORY_DEFAULT-->
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/third_activity_name"
            android:name=".ThirdActivity">
            <intent-filter>
                <!--Если вы определяете собственные действия, обязательно используйте в качестве их префикса имя пакета вашего приложения-->
                <action android:name="com.mds2019.implicitintentsforstartactivity.action" />

                <!--Для получения неявных объектов Intent необходимо включить категорию CATEGORY_DEFAULT-->
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>